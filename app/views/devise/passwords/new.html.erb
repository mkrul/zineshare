<div class="page-header">
  <div class="header-content">
    <h1 class="page-title">Forgot Your Password?</h1>
    <p class="page-subtitle">Enter your email address and we'll send you reset instructions</p>
  </div>
</div>

<div class="form-container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, "Email Address", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Send Reset Instructions", class: "btn btn-primary" %>
      <%= link_to "Cancel", new_user_session_path, class: "btn btn-secondary" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
