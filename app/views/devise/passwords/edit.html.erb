<div class="page-header">
  <div class="header-content">
    <h1 class="page-title">Change Your Password</h1>
    <p class="page-subtitle">Choose a new secure password for your account</p>
  </div>
</div>

<div class="form-container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, class: "form-label" do %>
        New Password
        <% if @minimum_password_length %>
          <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Create a strong password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Re-enter your new password" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Change My Password", class: "btn btn-primary" %>
      <%= link_to "Cancel", new_user_session_path, class: "btn btn-secondary" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
